.container
  .row
    .col-md-5
      =link_to "POST A JOB", new_job_path, class: "btn btn-primary"
      =link_to "GET HIRED", new_resume_path, class: "btn btn-primary"
    .col-md-7
      %h2 SEE HOW IT WORKS:
      .row.mainparlinks
        %a.col-md-4.col-sm-4.col-xs-4.circleicon.biz{:href => businesses_path}
          = image_tag('NEWbusinesses.png')
          %h3 BUSINESSES
        %a.col-md-4.col-sm-4.col-xs-4.circleicon.free{:href => freelancers_path}
          = image_tag('NEWfreelancers.png')
          %h3 FREELANCERS
        %a.col-md-4.col-sm-4.col-xs-4.circleicon.emp{:href => employees_path}
          = image_tag('NEWemployees.png')
          %h3 EMPLOYEES
      .row
        %h1 Experience Speed.
      .row
        .well.well-large
          %p Join businesses and workers around the globe on WorkCheetah.
          %br
          = simple_form_for( :confirmations, :url => confirmations_path, :html => {:class => 'form' }) do |f|
            %span.field
              = f.email_field :email, :placeholder => "Type your email here",class: "input-large"
            %span.action= f.submit "Get Started!", class: "btn btn-getstarted"
            = image_tag('NEWfree.png')
      .row
        .footings
          %p
            &copy; 2013 WorkCheetah.com Inc. &bull; All rights reserved &bull; Mail us: 303 W Lancaster Ave 142, Wayne PA 19087
            %br
            Email us: support@WorkCheetah.com &bull; Terms and Conditions &bull; Advertise &bull; Grow your business
.cheetahimage
  = image_tag('NEWlargecheetah.png')