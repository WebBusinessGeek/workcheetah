.articles_show
	.white_box
		.breadcrumbs
			= link_to "All Articles", articles_path

		.inline
			%a{:href => "#", :onclick => "window.open('https://www.facebook.com/sharer/sharer.php?u=#{request.url}', 'facebook-share-dialog', 'width=626,height=436'); return false;"}
				Share on Facebook

			%a.twitter-share-button{:href => "https://twitter.com/share"} Tweet
			:javascript
				!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');
			/ Place this tag where you want the share button to render.
			.g-plus{"data-action" => "share"}
			/ Place this tag after the last share tag.
			:javascript
				(function() {
					var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
					po.src = 'https://apis.google.com/js/plusone.js';
					var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
				})();


		.pull-right
			- if user_signed_in? && current_user.admin?
				= link_to "Edit Article", [:edit, @article], class: "btn"
				= link_to "Destroy Article", @article, class: "btn btn-danger", method: :delete
		%h1{style: "font-family: helvetica;"}= @article.title
		%h2{style: "font-family: helvetica;"}= @article.subtitle
		.article-cover{style: "margin-bottom: 20px; text-align: center;"}
			= image_tag @article.cover.url(:landscape) if @article.cover.present?
		= @article.body.html_safe