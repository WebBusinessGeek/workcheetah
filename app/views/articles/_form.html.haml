= simple_form_for @article do |f|
  = tinymce
  .control-group
    = f.label :title
    = f.text_field :title, style: "width: 99%; font-size: 24px; height: auto"
  .control-group
    = f.label :body
    = f.text_area :body, class: "tinymce", style: "width: 100%; height: 400px;"
  .control-group
    = f.label :slug
    http://www.workcheetah.com/articles/
    = f.text_field :slug
  .control-grpoup
    = f.input :cover
  .action= f.submit class: "btn btn-large btn-success"