$('#<%= dom_id(@notification) %>').hide()
<% @counter = current_user.notifications_count - 1 %>
<% if @counter > 0 %>
  $('#notifications span.badge').text("<%= @counter %>")
  $('#notifications').popover("destroy")
  $('#notifications').popover({content: "<%= j render current_user.notifications.order('created_at DESC') %>", placement: "bottom", html: true});
<% else %>
  $('#notifications').popover("destroy")
  $('#notifications').remove()
<% end %>