.conversations_index
	.white_box
		%h1 Conversations
		- if ['Business', 'Freelancer'].include?(current_user.role?) && ((Business.find_by_id(current_user.id).present? && Business.find_by_id(current_user.id).account.present?) || (Freelancer.find_by_id(current_user.id).present? && Freelancer.find_by_id(current_user.id).account.present?))
			%p
				Message your
				= link_to "recruits", recruits_account_path(current_user.account)
				= "- save an applicant to create a recruit."
		- if @conversations.any?
			%table.table.table-striped
				- @conversations.each do |conversation|
					%tr
						%td= link_to conversation.participants.where("user_id != ?", current_user.id).first.user.name, conversation
						%td= link_to truncate(conversation.conversation_items.last.body), conversation
						%td= link_to "#{time_ago_in_words(conversation.conversation_items.last.created_at)} ago", conversation