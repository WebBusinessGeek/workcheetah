= simple_form_for @validation_request do |f|
  = f.error_notification
  .form-fields
    = f.input :profit, label: "For profit?"
    = f.input :name, label: "Company Legal Name"
    = f.fields_for @validation_request.build_address do |af|
      = af.input :address_1
      = af.input :address_2
      = af.input :city
      = af.input :state
      = af.input :zip
    = f.input :contact_person
    = f.input :contact_email
    = f.input :ein, label: "EIN"
    = f.input :contact_phone
    / %p Are any of the positions within your organization "Commission only" opportunities?
    / = f.radio_button :commission_only, "0", style: "float: left; margin-right: 5px;"
    / = f.label :commission_only_0, "No", style: "float: left;  margin-right: 10px;"
    / = f.radio_button :commission_only, "1", style: "float: left; margin-right: 5px;"
    / = f.label :commission_only_1, "Yes", style: "float: left"
    = f.input :commission_only, label: 'Are any of the positions within your organization "Commission only" opportunities?'
    = f.input :independent_distributorship_opportunity, label: 'Is this an Independent distributorship opportunity?'
    .clearfix
    %br/

  .form-actions
    = f.submit "Submit Validation Seal Request", class: "btn btn-success"