- if current_user.account.has_payment_profile?
  = link_to "Buy Credits", "#invite-credit-modal", {"role" => "button", "data-toggle" => "modal", class: "btn btn-primary btn-large"}
- else
  = link_to "Update your billing info or enter a new one", new_payment_profile_path
#invite-credit-modal.modal.span6.hide.fade{"role" => "dialog", "aria-hidden" => "true"}
  %ul.thumbnails
    %li.span2= link_to "#{number_to_currency(Invite::PRICE[0].first)}", buy_invites_jobs_path(selection: "first"), class: "btn btn-large thumnail", method: :post
    %li.span2= link_to "#{number_to_currency(Invite::PRICE[1].first)}", buy_invites_jobs_path(selection: "second"), class: "btn btn-large thumnail", method: :post
    %li.span2= link_to "#{number_to_currency(Invite::PRICE[2].first)}", buy_invites_jobs_path(selection: "third"), class: "btn btn-large thumnail", method: :post