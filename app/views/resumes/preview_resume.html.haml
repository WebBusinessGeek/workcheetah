-if @job && @job_application
  #answerModal.modal.fade
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{type:"button","data-dismiss" => "modal", "aria-hidden" => "true"}x
          %h3 Questionaire
        .modal-body
          %p Below are the answers provided by the applicant
          - @job.questions.each_with_index do |question, index|
            %b= "Question #{index+1}" 
            = question.text
            %br/
            = " - " + question.answers.where(user_id: @job_application.user_id).first.text
            %br/
  #myHire.modal.fade
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{type:"button","data-dismiss" => "modal", "aria-hidden" => "true"}x
          %h3 Select Pay option
        .modal-body
          %p Please select whether this job is an hourly or a salaried position. This will effect how you generate an invoice and whether the employee will be able to log hourly time.
        .modal-footer
          = link_to "Hourly", hire_job_job_application_path(@job, @job_application, {type: "hourly"}), {class: "btn btn-large btn-success", method: :post}
          = link_to "Salary", hire_job_job_application_path(@job, @job_application, {type: "salary"}), {class: "btn btn-large btn-success", method: :post}
