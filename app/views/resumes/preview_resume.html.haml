  .col-md-8
    .row
      .col-md-8.col-sm-8.companyinfo
        .well
          %h1= @resume.name
          %h2= @resume.resume_type.humanize
          %ul
            %li
              %h3 Location:
              = @resume.addresses.first.city_state
            %li
              %h3 Brief Description:
              - if @resume.schools.any?
                = @resume.highest_merit_earned
              - else
                None
              -# - unless ['business', 'freelancer'].include?(@resume.resume_type)
              -#   %p.lead= @resume.status.present? ? @resume.status : "Unemployed"
          .buttonholds
            -# %a.btn.btn-viewall{ :href => "#"} Invite
            .panel
              .panel-default
                = render 'profile_actions'
      .col-md-4.col-sm-4.companyinfo
        .well
          - if @resume.user.account.present?
            - account = @resume.user.account
            - if account.logo.present?
              = link_to(image_tag(account.logo), account.website, :class => 'adimg')
              .simplelink
                %a{ :href => "#"} What's This?
            - else
              No logo provided
              = link_to "Update Logo", customize_account_path, class: "btn btn-viewall"
    .row
      .col-md-12.companydetails
        .well
          = link_to "Edit Profile", [:edit, @resume], class: "btn btn-viewall" if current_user == @resume.user
          %h1 Services
          - if @resume.skills.any?
            = @resume.skills.map(&:name)*", "
          - else
            No skills provided.
          %h4 Project History
          - if @resume.experiences.any?
            - @resume.experiences.each do |experience|
              = experience.job_title
              = " @ "
              %strong= experience.company_name
              %span.range " - "
              = experience.till
          - else
            No experiences provided.
          %h4 Referrers
          .row
            - if @resume.references.any?
              - @resume.references.each do |reference|
                .col-md-6.col-sm-6
                  %h3= reference.confirmed? ? "Confirmed" : "Not Confirmed"
                  %ul
                    %li
                      %h3 Name:
                      = reference.name
                    %li
                      %h3 How I Know this Business:
                      = reference.reference_type
                    %li
                      %h3 Feedback:
                      = reference.notes
            - else
              .col-md-6.col-sm-6
                %h3 No References provided
