<h1>Listing shifts</h1>

<table>
  <tr>
    <th>Employee</th>
    <th>Schedule date</th>
    <th>Start hour</th>
    <th>End hour</th>
    <th>Creator</th>
    <th>Shift hours</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shifts.each do |shift| %>
  <tr>
    <td><%= shift.employee_id %></td>
    <td><%= shift.schedule_date %></td>
    <td><%= shift.start_hour %></td>
    <td><%= shift.end_hour %></td>
    <td><%= shift.creator_id %></td>
    <td><%= shift.shift_hours %></td>
    <td><%= link_to 'Show', shift %></td>
    <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
    <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

