.row
  .span2
    %ul.nav.nav-list
      %li.nav-header Staff
    -@staffers.each do |staff|
      %li= link_to "#{staff.email}", "#"
  .span8
    .span3
      = link_to "New Schedule"
    .span3
    .span3
      #invite= render 'shifts/invitational', invitational: @invitational
    .row
      .span8
        %h1 listing Shifts

        %table.table
          %tr
            %th Employee
            %th Schedule date
            %th start hour
            %th end hour
            %th creator
            %th shift hours
            %th
            %th
            %th
            - @shifts.each do |shift|
              %tr
                %td= shift.employee_id
                %td= shift.schedule_date
                %td= shift.start_hour.hour
                %td= shift.end_hour.hour
                %td= shift.creator_id
                %td= shift.shift_hours
                %td= link_to 'Show', shift
                %td= link_to 'Edit', edit_shift_path(shift)
                %td= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' }

