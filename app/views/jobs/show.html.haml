.jobs_show
  .white_box
    .row
      .span8
        - if @job.account.logo.present?
          = image_tag @job.account.logo.medium.url
        %h2
          = @job.title
          - if @job.address.present?
            %span.city{ style: "font-weight: normal; font-size: 18px; color: #555"}
              &ndash;
              = @job.address
          - if can? :manage, @job
            = link_to 'Edit Job', edit_job_path(@job), class: "btn"
            = link_to 'Deactivate Job', job_path(@job), method: :delete, class: "btn btn-danger"

        %h3 Job Description
        - if @job.description
          %p= @job.description.html_safe


        - if @job.about_company.present?
          %h3 About Company
          %p= @job.about_company.html_safe
        = link_to 'Back', "javascript: history.go(-1)"
      .span2
        - if current_user && current_user.has_applied_to?(@job)
          .applied You've already applied.
        - else
          = link_to "Apply", new_job_job_application_path(@job), class: "btn btn-primary btn-large", style: "width: 95%"