.row
  .span3
    %lead Project
    %h1= @project.title
  .span4.pull-right
    = link_to "Log Time", "#", class: "btn btn-primary btn-success"
%hr/
.row
  .span4
    %h2 Tasks
    %ul#detailed_tasks.unstyled{data: {project_id: @project.id}}
      = render partial: "tasks/detailed_task", collection: @project.tasks, as: :task
  .span4
    %h2 Documents
.row
  .span8
    %hr/
    %h2 Comments
    %ul.unstyled#comments
      = render partial: "comments/comment", collection: @comments, as: :comment
    = render 'comments/form'
#taskform.modal.fade{tabindex:"-1", role: "dialog"}


