%html
  %head
    %title Work Cheetah
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = javascript_include_tag "https://js.stripe.com/v1/"
    = tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY
    = csrf_meta_tags
  %body
    .header_box
      = render "shared/header_nav", portal: true
      .container
        .header
          - if @account.logo.present?
            .pull-left{ style: "padding: 20px;" }= image_tag @account.logo.medium.url
          = link_to ""
          .pull-right{ style: "padding: 20px;" }= link_to image_tag("logo2.png"), root_path
    .container
      - if flash.any?
        .flash.row
          .span12
            - flash.each do |name, msg|
              %div{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
                %a.close{"data-dismiss" => "alert"} Ã—
                = msg
      .content
        = yield
      .footer{ style: "border: 0; padding: 10px 0 20px;"}
        = render "shared/footer"