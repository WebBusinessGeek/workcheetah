!!!
%html
  %head
    %title Work Cheetah
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    - unless request.path == root_path
      = javascript_include_tag "https://js.stripe.com/v1/"
    :erb
      <script type="text/javascript" src="//use.typekit.net/prn5mzt.js"></script>
      <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
      <link rel="shortcut icon" href="<%= asset_path("favicon-claw1.ico") %>">
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-40020070-1', 'workcheetah.com');
        ga('send', 'pageview');

      </script>
    = tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY
    = csrf_meta_tags
  %body.home
    .container
      .header_box
        = render "shared/header_nav"
      = yield
      .footer
        = render "shared/footer"
      :erb
        <script src="//static.getclicky.com/js" type="text/javascript"></script>
        <script type="text/javascript">try{ clicky.init(100600008); }catch(e){}</script>
        <noscript><p><img alt="Clicky" width="1" height="1" src="//in.getclicky.com/100600008ns.gif" /></p></noscript>