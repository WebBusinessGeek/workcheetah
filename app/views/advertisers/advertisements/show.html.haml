.container
  .row
    .span2
      = render 'advertisers/shared/sidebar_nav'
    .span10
      .row
        .span4  
          %p
            %b Title:
            = @advertisement.title
          %p
            %b Url:
            = @advertisement.url
          %p
            %b Text:
            = @advertisement.content
          %p
            %b Start time:
            = @advertisement.start_time
          %p
            %b End time:
            = @advertisement.end_time
          %p
            %b Confirmed:
            = @advertisement.confirmed
          = image_tag @advertisement.image.url(:landscape), style: "visibility:visible", class: "test" if @advertisement.image.present?
      = link_to "Back to Campaign", advertisers_campaign_path(@advertisement.campaign)