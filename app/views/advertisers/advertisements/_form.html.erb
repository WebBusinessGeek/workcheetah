<%= simple_form_for(@advertisers_advertisement) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :url %>
    <%= f.input :campaign_id %>
    <%= f.input :text %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :priority %>
    <%= f.input :confirmed %>
    <%= f.input :width %>
    <%= f.input :height %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
