- if ['business'].include?(current_user.role?)
  %li{:class => current_page?(categories_path) && 'active'}
    = link_to "Get Business", categories_path, class: (root_path == request.path ? "current" : "" )
  %li{:class => current_page?(projects_path) && 'active'}
    = link_to "Project Mgr", projects_path
  %li{:class => current_page?(search_resumes_path) && 'active'}
    = link_to "Recruiting", search_resumes_path, class: (root_path == request.path ? "current" : "" )
  -# %li{:class => current_page?(categories_path) && 'active'}
  -#   = link_to "Staff", "javascript:void(0);"
  %li{:class => current_page?(accounting_path) && 'active'}
    = link_to "Accounting", accounting_path
  %li{:class => current_page?(contacts_path) && 'active'}
    = link_to "Contacts", contacts_path
  - if current_user.resume.present?
    %li{:class => current_page?([current_user.resume]) && 'active'}
      = link_to "My Business", [current_user.resume], class: (current_user.resume == request.path ? "current" : "" )
  - else
    %li{:class => current_page?(new_resume_path) && 'active'}
      = link_to "My Business", [:new, :resume], class: (new_resume_path == request.path ? "current" : "" )
- elsif ['freelancer'].include?(current_user.role?)
