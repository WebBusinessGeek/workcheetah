      = link_to "My Profile", [:new, :resume], class: (new_resume_path == request.path ? "current" : "" )
- elsif current_user.advertiser?
  %li{:class => current_page?(advertisers_campaigns_path) && 'active'}
    = link_to "campaigns", advertisers_campaigns_path
  %li{:class => current_page?(advertisers_invoices_path) && 'active'}
    = link_to "invoices", advertisers_invoices_path
  %li{:class => current_page?(edit_advertisers_account_path) && 'active'}
    = link_to "manage my account", edit_advertisers_account_path(current_user.advertiser_account)
- elsif current_user.admin?
  %li{:class => current_page?(admin_path) && 'active'}
    = link_to "Admin", admin_path
- elsif current_user.moderator?
  %li{:class => current_page?(moderator_path) && 'active'}
    = link_to "Moderator", moderator_path
- else
  %li{:class => current_page?(categories_path) && 'active'}
    = link_to "Find Work", categories_path, class: (root_path == request.path ? "current" : "" )
  %li{:class => current_page?(projects_path) && 'active'}
    = link_to "Task Mgr", projects_path
  - if current_user.resume.present?
    %li{:class => current_page?([current_user.resume]) && 'active'}
      = link_to "My Profile", [current_user.resume], class: (current_user.resume == request.path ? "current" : "" )
  - else
    %li{:class => current_page?(new_resume_path) && 'active'}
      = link_to "My Profile", [:new, :resume], class: (new_resume_path == request.path ? "current" : "" )
  -# %li{:class => current_page?(categories_path) && 'active'}
  -#   = link_to "Messages", "javascript:void(0);"
  %li{:class => current_page?(contacts_path) && 'active'}
    = link_to "Contacts", contacts_path
