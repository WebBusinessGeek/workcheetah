<%= simple_form_for(@tweet) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :body %>
    <%= f.input :for_accounts %>
    <%= f.input :for_public %>
    <%= f.input :for_resumes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
