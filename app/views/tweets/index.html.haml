.tweets_index
  .white_box
    %h1 Listing tweets
    %table.table
      %tr
        %th Body
        %th For accounts
        %th For public
        %th For resumes
        %th
        %th
        %th
      - @tweets.each do |tweet|
        %tr
          %td= tweet.body
          %td= tweet.for_accounts
          %td= tweet.for_public
          %td= tweet.for_resumes
          %td= link_to 'Show', tweet
          %td= link_to 'Edit', edit_tweet_path(tweet)
          %td= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' }
    %br/
    = link_to 'New Tweet', new_tweet_path
