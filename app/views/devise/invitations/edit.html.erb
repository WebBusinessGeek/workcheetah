<div class="container">
  <div class="row">
    <div class="col-md-8">
      <%= simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put, :role => "form", class: "form-horizontal" } do |f| %>
        <legend>Set your password and type of user you wish to be.</legend>
        <%= devise_error_messages! %>
        <div class="form-group">
          <div class="col-sm-4">
            <%= f.hidden_field :invitation_token %>
            <%= f.input :role, collection: ['employee', 'freelancer', 'business'] %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-4">
            <%= f.input :password %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-4">
            <%= f.input :password_confirmation %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-8">
            <%= f.submit t("devise.invitations.edit.submit_button") %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
