%h2 Sign In
= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  .control-group
    = f.label :email
    .control= f.email_field :email
  .control-group
    = f.label :password
    .control
      = f.password_field :password
  - if devise_mapping.rememberable?
    .control-group
      .control
        = f.check_box :remember_me, style: "float: left;"
      = f.label :remember_me, class: "checkbox"
  %div= f.submit "Sign in", class: "btn"