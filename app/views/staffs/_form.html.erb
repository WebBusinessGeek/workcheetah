<%= simple_form_for(@staff) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :staffer_id, as: :hidden %>
    <%= f.input :client_id, as: :hidden %>
    <%= f.input :rate, label: "Hourly Rate" %>
    <%= f.input :color, label: "Personal Calendar Color" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>