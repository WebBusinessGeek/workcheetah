<h1>Listing Staffers</h1>

<table>
  <tr>
    <th>User</th>
    <th>Position</th>
    <th></th>
  </tr>

<% @staffed_users.each do |staff| %>
  <tr>
    <td><%= staff.name %></td>
    <td><%= staff.role %></td>
    <td><%= link_to 'Show', staff %></td>
    <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

