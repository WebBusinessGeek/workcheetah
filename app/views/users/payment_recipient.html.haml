= form_tag update_bank_account_path(id: @user.id), class: 'form-horizontal', id: 'account-form' do
  .control-group
    %label.control-label{:for => "fullName"} Full Name
    .controls
      %input#fullName{type: "text", name: "fullName"}/
  .control-group
    %label.control-label{:for => "number"} Routing Number
    .controls
      %input.routingNumber{type: "text", size: 9, placeholder: "*********"}/
  .control-group
    %label.control-label Account Number
    .controls
      %input.accountNumber{:type => "text"}/
  .form-row
    .controls
      %button.btn.btn-primary{type: "submit"} Pay